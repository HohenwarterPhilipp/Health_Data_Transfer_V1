<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="1dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/popup_rounded_corner">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514">

        <TextView
            android:id="@+id/txtDiastolicValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/lblDiastolic"
            android:gravity="right"
            android:textSize="30dp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/lblDiastolic"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Diastolic(mmHg):"
            android:textSize="30dp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/lblSystolic"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDiastolic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:text="Systolic(mmHg):"
            android:textSize="30dp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/txtSystolicValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDiastolicValue"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/lblSystolic"
            android:gravity="right"
            android:textSize="30dp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/lblHeartRate"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblSystolic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:text="Heart rate(bpm):"
            android:textSize="30dp"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/txtHeartRateValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSystolicValue"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/lblHeartRate"
            android:gravity="right"
            android:textSize="30dp"
            android:textStyle="bold|italic"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>